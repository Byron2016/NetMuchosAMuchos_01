@model List<Model.Alumno>
@{
    ViewBag.Title = "Alumnos";
}

<div class="well well-sm">
    <div class="row">
        <div class="col-xs-10">
            <h2>Alumnos</h2>
        </div>
        <div class="col-xs-2 text-right">
            <a class="btn btn-primary" href="~/Home/Crud/">Nuevo registro</a>
        </div>
    </div>
</div>


<table class="table table-striped">
    
    <thead>
        <tr>
            
            
        
        </tr>
        <tr>
            <th style="width:100px;">Nombre</th>
            <th>Apellido</th>
            <th style="width:200px;"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Nombre</td>
                <td>@a.Apellido</td>
                <td class="text-right">
                    <a onclick="return confirm('Esta seguro?');" href="~/home/eliminar/@a.Id" title="Eliminar" class="btn btn-danger">
                        <i class="glyphicon glyphicon-ban-circle"></i>
                    </a>
                    <a class="btn btn-default btn-success" href="~/Home/Ver/@a.Id" title="Visualizar">
                        <i class="glyphicon glyphicon-eye-open"></i>
                    </a>
                    <a class="btn btn-default" href="~/Home/Crud/@a.Id" title="Visualizar">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>



</table>
